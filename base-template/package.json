{
  "name": "fhevm-base-template",
  "version": "1.0.0",
  "description": "Base Hardhat template for FHEVM example projects",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network zamaTestnet",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'"
  },
  "keywords": [
    "fhevm",
    "privacy",
    "encryption",
    "blockchain",
    "hardhat",
    "zama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "chai": "^4.3.10",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^4.0.1",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.1.0",
    "fhevmjs": "^0.3.1"
  }
}
