# Privacy Training Record - Environment Configuration
# Copy this file to .env and fill in your values

# Network RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ZAMA_RPC_URL=https://sepolia.zama.ai/

# Wallet Configuration
# IMPORTANT: Never commit your actual private key!
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# API Keys for Verification and Monitoring
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY

# Contract Configuration
CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS
NETWORK_NAME=zamaTestnet
CHAIN_ID=9000

# Frontend Configuration (if using separate frontend)
VITE_CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS
VITE_NETWORK_NAME=Zama Sepolia Testnet
VITE_CHAIN_ID=9000
VITE_RPC_URL=https://sepolia.zama.ai/

# Gas Configuration (Optional)
GAS_PRICE=20
GAS_LIMIT=12000000

# Logging and Reporting (Optional)
REPORT_GAS=false
LOG_LEVEL=info
